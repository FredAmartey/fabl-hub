{
  "name": "fabl-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/hub",
    "apps/studio",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/hub && npm run dev",
    "dev:hub": "cd apps/hub && npm run dev",
    "dev:studio": "cd apps/studio && npm run dev",
    "dev:all": "npm-run-all --parallel dev:hub dev:studio",
    "build": "cd apps/hub && npm run build",
    "build:hub": "cd apps/hub && npm run build",
    "build:studio": "cd apps/studio && npm run build",
    "build:all": "npm-run-all build:hub build:studio",
    "start": "cd apps/hub && npm run start",
    "lint": "npm-run-all lint:*",
    "lint:hub": "cd apps/hub && npm run lint",
    "lint:studio": "cd apps/studio && npm run lint",
    "typecheck": "npm-run-all typecheck:*",
    "typecheck:hub": "cd apps/hub && npm run typecheck",
    "typecheck:studio": "cd apps/studio && npm run typecheck",
    "typecheck:packages": "npm-run-all typecheck:packages:*",
    "typecheck:packages:db": "cd packages/db && npm run typecheck",
    "typecheck:packages:types": "cd packages/types && npm run typecheck",
    "typecheck:packages:utils": "cd packages/utils && npm run typecheck"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}